<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".views.configScreen_Activity"
                                             tools:layout_editor_absoluteY="81dp">

    <SeekBar
            android:id="@+id/pilotBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="296dp"
            android:layout_height="15dp"
            android:max="16"
            android:progress="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pilotCounter" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="0"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/pilotCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <SeekBar
            android:id="@+id/fighterBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="296dp"
            android:layout_height="15dp"
            android:max="16"
            android:progress="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fighterCounter" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="0"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/fighterCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <SeekBar
            android:id="@+id/traderBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="296dp"
            android:layout_height="15dp"
            android:max="16"
            android:progress="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/traderCounter" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="0"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/traderCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <SeekBar
            android:id="@+id/engineerBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="296dp"
            android:layout_height="15dp"
            android:max="16"
            android:progress="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/engineerCounter" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="0"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/engineerCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>


    <TextView
            android:id="@+id/difficulty_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Difficulty:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/engineerBar"/>

    <EditText
            android:id="@+id/player_name_input"
            android:layout_width="216dp"
            android:layout_height="41dp"
            android:layout_below="@id/difficulty_header"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Enter Character Name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>

    <Spinner
            android:id="@+id/difficulty_spinner"
            android:layout_width="348dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/difficulty_header"/>

    <TextView
            android:textAlignment="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Character Name:"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/player_name_input" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character Configuration"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/difficulty_spinner"/>

    <TextView
            android:textAlignment="center"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill Points Remaining:"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/player_name_input" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/remainingPointsCounter" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.6"/>

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remainingPointsCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/player_name_input"/>


    <TextView
            android:textAlignment="center"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilot:"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:textAlignment="center"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fighter:"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pilotBar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:textAlignment="center"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trader:"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fighterBar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:textAlignment="center"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineer:"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/traderBar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>